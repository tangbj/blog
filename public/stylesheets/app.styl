/* app css stylesheet */

/* mixins */
border-radius(n) {
  -webkit-border-radius: n;
  -moz-border-radius: n;
  border-radius: n; 
}

.menu {
  list-style: none;
  border-bottom: 0.1em solid black;
  margin-bottom: 2em;
  padding: 0 0 0.5em;
}

.menu:before {
  content: "[";
}

.menu:after {
  content: "]";
}

.menu > li {
  display: inline;
}

.menu > li:before {
  content: "|";
  padding-right: 0.3em;
}

.menu > li:nth-child(1):before {
  content: "";
  padding: 0;
}

.blog {
  .categories {
    display: inline-block;
    margin-left: 8px;
  }

  .categories:first-child {
    margin-left: 0;
  }
}

